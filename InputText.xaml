<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ADa" Width="520" Height="240" WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Input" FontSize="18" FontWeight="SemiBold" />

    <StackPanel Grid.Row="1" Margin="0,12,0,12">
      <TextBlock x:Name="text_prompt" Margin="0,0,0,6" />
      <TextBox x:Name="text_input" MinHeight="28"/>
    </StackPanel>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button x:Name="button_ok" Width="90" Height="28" Margin="6,0,0,0" Content="OK"/>
      <Button x:Name="button_cancel" Width="90" Height="28" Margin="6,0,0,0" Content="Cancel"/>
    </StackPanel>
  </Grid>
</Window>
