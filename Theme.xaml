<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- ADa tokens -->
  <Color x:Key="Ada.Primary">#FF0A84FF</Color>
  <SolidColorBrush x:Key="Ada.PrimaryBrush" Color="{StaticResource Ada.Primary}" />
  <SolidColorBrush x:Key="Ada.PrimaryBrush.Fg" Color="White" />
  <CornerRadius x:Key="Ada.Radius">12,12,12,12</CornerRadius>
  <Thickness x:Key="Ada.Padding">12</Thickness>

  <!-- Control Styles (moved from Controls.xaml) -->
  <Style TargetType="Border">
    <Setter Property="CornerRadius" Value="{StaticResource Ada.Radius}"/>
  </Style>

  <Style x:Key="Ada.FilledButton" TargetType="Button">
    <Setter Property="Background" Value="{StaticResource Ada.PrimaryBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource Ada.PrimaryBrush.Fg}"/>
    <Setter Property="Padding"    Value="{StaticResource Ada.Padding}"/>
    <Setter Property="Margin"     Value="6"/>
  </Style>
</ResourceDictionary>