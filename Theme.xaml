<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- ADa tokens -->
  <Color x:Key="Ada.Primary">#FF0A84FF</Color>
  <SolidColorBrush x:Key="Ada.PrimaryBrush" Color="{StaticResource Ada.Primary}" />
  <SolidColorBrush x:Key="Ada.PrimaryBrush.Fg" Color="White" />
  <CornerRadius x:Key="Ada.Radius">12,12,12,12</CornerRadius>
  <Thickness x:Key="Ada.Padding">12</Thickness>

  <!-- Safe window defaults -->
  <Style TargetType="Window">
    <Setter Property="WindowStartupLocation" Value="CenterOwner"/>
  </Style>
</ResourceDictionary>
