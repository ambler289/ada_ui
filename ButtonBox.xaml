<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ADa" Width="560" Height="360" WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock x:Name="TitleText" Text="Choose" FontSize="18" FontWeight="SemiBold" />

    <ScrollViewer Grid.Row="1" Margin="0,12,0,12">
      <UniformGrid x:Name="panel_buttons" Rows="0" Columns="1"/>
    </ScrollViewer>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button x:Name="button_ok" Width="90" Height="28" Margin="6,0,0,0" Content="OK"/>
      <Button x:Name="button_cancel" Width="90" Height="28" Margin="6,0,0,0" Content="Cancel"/>
    </StackPanel>
  </Grid>
</Window>
